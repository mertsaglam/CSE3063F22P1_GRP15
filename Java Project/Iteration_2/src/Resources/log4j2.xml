<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Properties>
        <Property name="path">{PATH HERE}</Property> 
        //Path variable for log file should be arranged for every different computer. 
        //Example: "C:\Users\Memir\eclipse-workspace\Java_Project\Iteration_2\src\Log_Outputs\"
    </Properties>
    
    <Appenders>
        <RollingFile name="rolling" fileName="${path}LogFile.log" filePattern="${path}LogFile_%d{yyyy-MM-dd-HH-mm-ss}-%i.log">
            <PatternLayout pattern="%d{yyyy-MM-dd | HH:mm:ss} %-5level %logger{%36} >> %msg%n"></PatternLayout>
            
            <Policies>
                <SizeBasedTriggeringPolicy size="10 MB"/>
            </Policies>
            
            <DefaultRolloverStrategy max="50" />
            
        </RollingFile>
    </Appenders>
    
    <Loggers>
        <Logger name="Pack" level="ALL" additivity="false">
            <appender-ref ref="rolling"></appender-ref>
        </Logger>
    </Loggers>
</Configuration>
